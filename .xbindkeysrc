# Poweroff
"poweroff"
    Mod4 + Control + Escape

# Terminal
"alacritty -e ~/.local/scripts/tmuxa"
    Mod4 + Return

"alacritty --class floatingwin -e ~/.local/scripts/tmuxa"
    Mod4 + Control + Return

# Emacs
"emacsclient --alternate-editor=\"\" -c"
    Mod4 + Shift + Return

# Browser
"firefox"
    Mod4 + z

"xrandrsw"
    Mod4 + Shift + Control + d

"~/.local/scripts/klaysw"
    Mod1 + Shift + Tab

"nextcloud"
    Mod4 + Control + n

"killall nextcloud"
    Mod4 + Mod1 + n

#--# # WPG # #--#
"alacritty --class fzf -e ~/.local/scripts/wpg_theme theme"
    Mod4 + Shift + w

"alacritty --class fzf -e ~/.local/scripts/wpg_theme wall"
    Mod4 + Control + w

"wpg -m"
    Mod4 + w

#App launcher bindings
"alacritty -e tremc -X"
    Mod4 + Shift + t

"rofi -show drun -config ~/.config/rofi/launcher.rasi"
    Mod4 + d


#Calculette
"alacritty --class floatingwin -e python"
    XF86Calculator
#
#Calendar
"alacritty --class floatingwin -e ~/.local/scripts/calendar"
    Mod4 + XF86Calculator

"alacritty --class floatingwin -e ~/.local/scripts/calendar"
    Mod4 + c

#pavucontrol
"pavucontrol"
    Mod4 + XF86AudioMute

# Audio controls
"~/.local/scripts/pactlsam --reset"
    Shift + XF86AudioMute

"~/.local/scripts/pactlsam --mictoggle"
    XF86AudioMicMute

"~/.local/scripts/pactlsam --plus 5"
    XF86AudioRaiseVolume

"~/.local/scripts/pactlsam --moins 5"
    XF86AudioLowerVolume

"~/.local/scripts/pactlsam --plus 10"
    Shift + XF86AudioRaiseVolume

"~/.local/scripts/pactlsam --moins 10"
    Shift + XF86AudioLowerVolume

# "amixer -q set Master 1+ toggle && sleep 0.05"
#     XF86AudioMute
"~/.local/scripts/pactlsam --toggle"
    XF86AudioMute

# Screen brightness controls
"~/.local/scripts/brightnessbar moins 5"
    XF86MonBrightnessDown
"~/.local/scripts/brightnessbar plus 5"
    XF86MonBrightnessUp

"~/.local/scripts/brightnessbar moins 10"
    Shift + XF86MonBrightnessDown
"~/.local/scripts/brightnessbar plus 10"
    Shift + XF86MonBrightnessUp

