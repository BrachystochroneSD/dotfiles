#!/bin/bash

#color correction for emacs

hex=$(awk '/base02/' ~/.cache/wal/base16-wal-theme.el | cut -d\" -f2)

r=$(echo 0$(printf '%x' $(( $((0x${hex:1:2})) / 3 ))))
r=${r: -2}
g=$(echo 0$(printf '%x' $(( $((0x${hex:3:2})) / 3 ))))
g=${g: -2}
b=$(echo 0$(printf '%x' $(( $((0x${hex:5:2})) / 3 ))))
b=${b: -2}

sed "/base02/c\                                         :base02 \"#$r$g$b\"" ~/.cache/wal/base16-wal-theme.el > ~/.emacs.d/base16-wal-theme.el

# template for keepmenu

cp ~/.cache/wal/keepmenuconf ~/.config/keepmenu/config.ini
cp ~/.cache/wal/nm_dmenu ~/.config/networkmanager-dmenu/config.ini
