#!/bin/sh
#
# See the LICENSE file for copyright and license details. 
#

. "${HOME}/.config/wpg/formats/colors.sh"


xidfile="/tmp/tabbed-surf.xid"
uri=""

if [ "$#" -gt 0 ];
then
	uri="$1"
fi

runtabbed() {
	tabbed -t "$color0" -T "$color15" -u "$color7" -U "$color0" -dn tabbed-surf -r 2 -c surf -e '' "$uri" >"$xidfile" \
		2>/dev/null &
}

if [ ! -r "$xidfile" ];
then
	runtabbed
else
	xid=$(cat "$xidfile")
	xprop -id "$xid" >/dev/null 2>&1
	if [ $? -gt 0 ];
	then
		runtabbed
	else
		surf -e "$xid" "$uri" >/dev/null 2>&1 &
	fi
fi
