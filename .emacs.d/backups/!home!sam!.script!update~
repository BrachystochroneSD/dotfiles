#!/bin/bash

prount(){
    number=$(apt-get dist-upgrade -s --quiet=2 | grep ^Inst | wc -l)
    (( ! $number == 0 )) && echo ïˆ $number || echo ""
}

update(){
    exec st -n scripts -e sudo apt-get update && sudo apt-get dist-upgrade
    notify-send 'Update finished successfully!'
    prount
}

case $1 in
    --update)
	update
	;;
    *)
	prount
	;;
esac
