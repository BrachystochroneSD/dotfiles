#-----------------------------------------------#
# config i3
#-----------------------------------------------#

for_window [class="^.*"] border pixel 0
gaps inner 15
gaps outer 15

#  #----Definitions----#  #
set $mod Mod4
set $term --no-startup-id st
set $editor --no-startup-id emacsclient --alternate-editor="" -c
set $browser --no-startup-id brave
set $browser2 --no-startup-id firefox
set $mailviewer --no-startup-id ~/.script/edit -e '(mu4e)'
set $rssfeeder --no-startup-id ~/.script/edit -e '(elfeed)'
set $calendar --no-startup-id ~/.script/edit -e '(cfw:open-diary-calendar)'

set_from_resource $fg1 i3wm.color15
set_from_resource $bg1 i3wm.color0
set_from_resource $fg2 i3wm.color7
set_from_resource $bg2 i3wm.color3
set_from_resource $bga i3wm.color8

#  #---# Colors #---#  #

client.focused          $bg1   $bg2   $fg1  $bg2
client.unfocused        $bg1   $bg1   $fg2  $bg1
client.focused_inactive $bg1   $bg1   $fg2  $bg1
client.urgent           $bga   $bga   $fg1  $bg1

hide_edge_borders both

# #font
font pango:Mono-Bold 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

#-----------------------------------------------#
# bindings i3
#-----------------------------------------------#

# enter fullscreen mode for the focused container
bindsym $mod+f                  fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+e                  layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space        floating toggle

# change focus between tiling / floating windows
bindsym $mod+space              focus mode_toggle

# switch to workspace
bindsym $mod+ampersand           workspace 1
bindsym $mod+eacute              workspace 2
bindsym $mod+quotedbl            workspace 3
bindsym $mod+apostrophe          workspace 4
bindsym $mod+parenleft           workspace 5
bindsym $mod+section             workspace 6
bindsym $mod+egrave              workspace 7
bindsym $mod+exclam              workspace 8
bindsym $mod+ccedilla            workspace 9
bindsym $mod+agrave              workspace 10

# move focused container to workspace
bindsym $mod+Shift+ampersand     move container to workspace 1
bindsym $mod+Shift+eacute        move container to workspace 2
bindsym $mod+Shift+quotedbl      move container to workspace 3
bindsym $mod+Shift+apostrophe    move container to workspace 4
bindsym $mod+Shift+5             move container to workspace 5
bindsym $mod+Shift+section       move container to workspace 6
bindsym $mod+Shift+egrave        move container to workspace 7
bindsym $mod+Shift+exclam        move container to workspace 8
bindsym $mod+Shift+ccedilla      move container to workspace 9
bindsym $mod+Shift+agrave        move container to workspace 10

bindsym $mod+Tab                workspace back_and_forth

# reload the configuration file
bindsym $mod+Shift+c            reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Ctrl+r             restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+Escape               exec i3-msg exit
bindsym $mod+Ctrl+Escape               exec poweroff


#rebinds pour le focus, le mouvement et le resize windows
bindsym $mod+Ctrl+h             resize shrink width 10 px or 10 ppt
bindsym $mod+Ctrl+k             resize grow height 10 px or 10 ppt
bindsym $mod+Ctrl+j             resize shrink height 10 px or 10 ppt
bindsym $mod+Ctrl+l             resize grow width 10 px or 10 ppt

# change focus
bindsym $mod+h                  focus left
bindsym $mod+k                  focus up
bindsym $mod+j                  focus down
bindsym $mod+l                  focus right

# move focused window
bindsym $mod+Shift+h            move left
bindsym $mod+Shift+k            move up
bindsym $mod+Shift+j            move down
bindsym $mod+Shift+l            move right

bindsym $mod+Shift+Ctrl+h       move left 70 px
bindsym $mod+Shift+Ctrl+k       move up 70 px
bindsym $mod+Shift+Ctrl+j       move down 70 px
bindsym $mod+Shift+Ctrl+l       move right 70 px

# alternatively, you can use the cursor keys:
bindsym $mod+Left               focus left
bindsym $mod+Down               focus down
bindsym $mod+Up                 focus up
bindsym $mod+Right              focus right

bindsym $mod+Shift+Left         move left 40 px
bindsym $mod+Shift+Down         move down 40 px
bindsym $mod+Shift+Up           move up 40 px
bindsym $mod+Shift+Right        move right 40 px

bindsym $mod+Ctrl+Left          resize shrink width 10 px or 10 ppt
bindsym $mod+Ctrl+Up            resize grow height 10 px or 10 ppt
bindsym $mod+Ctrl+Down          resize shrink height 10 px or 10 ppt
bindsym $mod+Ctrl+Right         resize grow width 10 px or 10 ppt

# gaps

bindsym $mod+s                  gaps inner current plus 5
bindsym $mod+Shift+s            gaps inner current minus 5

bindsym $mod+Shift+d            gaps inner current set 15; gaps outer current set 15

bindsym $mod+q                  gaps outer current plus 5
bindsym $mod+Shift+q            gaps outer current minus 5


# kill focused window
bindsym $mod+a                  kill

bindsym $mod+i                  split toggle


#-----------------------------------------------#
# launch
#-----------------------------------------------#

bar {
    i3bar_command $HOME/.config/polybar/launch.sh
}

#  #----Keyboard layout----#  #
exec setxkbmap -layout be

#Nextcloud
exec --no-startup-id nextcloud --background
bindsym $mod+Ctrl+n exec nextcloud

#redshift
exec redshift

#compton
exec --no-startup-id picom

#unclutter
exec unclutter --timeout 2

#-----------------------------------------------#
# bindings general
#-----------------------------------------------#

#--# # xrandr # #--#

bindsym $mod+Shift+Ctrl+d                       exec ~/.script/xrandrsw

#--# # Rome2rio # #--#

bindsym $mod+g                       exec ~/.script/rome2rio/rome2rio

#--# # WPG # #--#

bindsym $mod+Ctrl+Shift+w                       exec $term -n fzf -e .script/wpg_theme

bindsym $mod+Shift+w           exec wpg -m

#App launcher bindings
bindsym $mod+z                  exec $browser
bindsym $mod+Ctrt+z             exec $browser2
#bindsym $mod+Ctrl+z             exec killall surf ; exec rm -f /tmp/tabbed-surf.xid ; exec ~/.config/surf-3.0/surf-open.sh web.tabliss.io
#bindsym $mod+Shift+z            exec ~/.config/surf-3.0/surf-open.sh web.tabliss.io
bindsym $mod+Return             exec $term
bindsym $mod+Shift+Return       exec $editor
bindsym $mod+Ctrl+Return        exec $term -n scratchterm

for_window [instance="scratchterm"] floating enable
for_window [instance="scratchterm"] resize set 625 400

# transmission,
for_window [instance="qjackctl"] floating enable

# transmission,
for_window [instance="transmission"] floating enable
for_window [instance="transmission"] resize set 700 400

bindsym $mod+Shift+t exec $term -n transmission -e tremc

# start dmenu
bindsym $mod+d                  exec dmenu_run -nb "$bg1" -nf "$fg1" -sb "$bg1" -sf "$bg2" -i

#pavucontrol
for_window [class="Pavucontrol"] floating enable
bindsym $mod+XF86AudioMute      exec pavucontrol

# Amixer Audio controls

set $pactlunmute pactl set-sink-mute alsa_output.pci-0000_00_1b.0.analog-stereo false

bindsym XF86AudioRaiseVolume    exec $pactlunmute && amixer -q set Master 5%+ unmute && paplay /usr/share/sounds/freedesktop/stereo/dialog-information.oga
bindsym XF86AudioLowerVolume    exec $pactlunmute && amixer -q set Master 5%- unmute && paplay /usr/share/sounds/freedesktop/stereo/dialog-information.oga

bindsym Shift+XF86AudioRaiseVolume exec $pactlunmute && amixer -qM set Master 10%+ unmute && paplay /usr/share/sounds/freedesktop/stereo/dialog-information.oga
bindsym Shift+XF86AudioLowerVolume exec $pactlunmute && amixer -qM set Master 10%- unmute && paplay /usr/share/sounds/freedesktop/stereo/dialog-information.oga

# bindsym XF86AudioMute           exec amixer -q set Master 1+ toggle && sleep 0.05 && paplay /usr/share/sounds/freedesktop/stereo/dialog-information.oga
bindsym XF86AudioMute           exec pactl set-sink-mute alsa_output.pci-0000_00_1b.0.analog-stereo toggle && sleep 0.05 && paplay /usr/share/sounds/freedesktop/stereo/dialog-information.oga

# Screen brightness controls
bindsym XF86MonBrightnessDown   exec .script/brightnessbar moins 5
bindsym XF86MonBrightnessUp     exec .script/brightnessbar plus 5

bindsym Shift+XF86MonBrightnessDown exec .script/brightnessbar moins 10
bindsym Shift+XF86MonBrightnessUp   exec .script/brightnessbar plus 10

#---# Music shits #---#

exec ~/.script/musicvizu/musicvizu.sh
exec mpd

bindsym $mod+Ctrl+Shift+m         exec mpd
bindsym $mod+Ctrl+m               exec ~/.script/musicvizu/musicvizu.sh

for_window [instance="ncmpcppwin"] floating enable
for_window [instance="ncmpcppwin"] resize set 625 400
for_window [instance="ncmpcppwin"] move right 105
for_window [instance="ncmpcppwin"] move scratchpad

for_window [instance="album"] floating enable
for_window [instance="album"] resize set 202 202
for_window [instance="album"] move left 105
for_window [instance="album"] move down 10
for_window [instance="album"] move scratchpad

for_window [instance="cavaviz"] floating enable
for_window [instance="cavaviz"] resize set 200 150
for_window [instance="cavaviz"] move left 105
for_window [instance="cavaviz"] move down 230
for_window [instance="cavaviz"] move scratchpad

bindsym $mod+m [instance="album"] scratchpad show ; [instance="cavaviz"] scratchpad show ; [instance="ncmpcppwin"] scratchpad show

#bindings for MPD MPC NCMPCPP
bindsym $mod+v                  exec mpc prev
bindsym $mod+b                  exec mpc toggle
bindsym $mod+Shift+b            exec mpc stop
bindsym $mod+n                  exec mpc next

bindsym $mod+Shift+n            exec mpc seek +3
bindsym $mod+Shift+v            exec mpc seek -3

bindsym $mod+Ctrl+b             exec mpc random

bindsym Ctrl+XF86AudioRaiseVolume exec mpc volume +3
bindsym Ctrl+XF86AudioLowerVolume exec mpc volume -3

#--# # FZF # #--#

bindsym $mod+Shift+f                    exec $term -n fzf -e /home/sam/.script/fzf-open.sh
bindsym $mod+Ctrl+f                     exec $term -n fzf -e /home/sam/.script/fzf-open.sh --hidden

for_window [instance="fzf"] floating enable
for_window [instance="fzf"] resize set 725 200

